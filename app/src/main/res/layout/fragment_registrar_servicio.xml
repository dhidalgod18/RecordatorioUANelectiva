<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:paddingStart="50dp"
    android:paddingEnd="50dp"
    android:paddingTop="70dp"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".ui.RegistrarServicio.RegistrarServicio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/chewy"
        android:text="Nombre del servicio"
        android:hint="@string/user"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/textNombreServicio"
        android:layout_width="match_parent"
        android:inputType="text"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/btn_fecha_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/azulceleste"
        android:fontFamily="@font/chewy"
        android:layout_marginTop="60dp"
        android:textSize="25sp"
        android:text="Seleccionar fecha de pago" />


    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/azulceleste"
        android:fontFamily="@font/chewy"
        android:text="Agregar servicio"
        android:textSize="25sp"/>


</LinearLayout>